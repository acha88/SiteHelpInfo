{% extends "base.html.twig" %}
{% block body %} 
    <h3>Se connecter</h3>
    <!--formulaire de connexion-->
    <form action="{{ path('security_login') }}" class="divSecurity" method="post">
        <div>
            <label for="">Votre email :</label>
            <input placeholder="Email" required name="_username" type="text" class="">
        </div>
        <div>
            <label for="">Votre mot de passe :</label>
            <input placeholder="Mot de passe" required name="_password" type="password" class="">
        </div>
        <div>
            <button type="submit" class="btnLog btn btn-success">Se connecter</button>
        </div>
    </form>
{% endblock body %}